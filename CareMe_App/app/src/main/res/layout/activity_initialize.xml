<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.careme.apvereda.careme.InitializeActivity"
    android:weightSum="1">


    <ImageView
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.32"
        android:src="@mipmap/ic_launcher" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtemail"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:hint="Email"
        android:textSize="20dp"
        android:background="#b9b3b3"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:password="false" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtphone"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:hint="Telefono Cuidador"
        android:textSize="20dp"
        android:background="#b9b3b3"
        android:layout_marginTop="20dp"
        android:phoneNumber="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtcareremail"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:hint="Email Cuidador"
        android:textSize="20dp"
        android:background="#b9b3b3"
        android:layout_marginTop="20dp"
        android:phoneNumber="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <Button
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/btnaccept"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/test_button_style"
        android:textColor="#FFFFFF" />
</LinearLayout>
